<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/delete_sheet_bg"
    android:id="@+id/delete_bottom_sheet">

    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:background="@drawable/item_delete_sheet_view_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure \n you want to Delete this Note"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/delete_no_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:elevation="4dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/item_no_delete_button"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/delete_yes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:elevation="4dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/item_yes_delete_button"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

</LinearLayout>